<h1>Listing gigs</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.event %></td>
        <td><%= gig.description %></td>
        <td><%= gig.location %></td>
        <td><%= gig.date %></td>
        <td><%= link_to 'Show', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

